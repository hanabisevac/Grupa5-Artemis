@model GoldenLilies.Models.Fotografija

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Fotografija</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.putanja)
        </dt>
        <dd class = "col-sm-10">
            <img width="200px" height="150px" src="@Html.DisplayFor(model => model.putanja)" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.verifikovano)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.verifikovano)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.korisnik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.korisnik.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.atrakcija)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.atrakcija.ID)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Zaposlenik"))
    {
     <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a>    
    }
    <a asp-action="FotografijeAtrakcije" asp-route-id="@Model.atrakcijaID">Back to List</a>
</div>
