@model GoldenLilies.Models.Fotografija

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Fotografija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="putanja" class="control-label"></label>
                <input asp-for="putanja" class="form-control" />
                <span asp-validation-for="putanja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="korisnikID" class="control-label"></label>
                <select asp-for="korisnikID" class="form-control" asp-items="ViewBag.korisnikID"></select>
                <span asp-validation-for="korisnikID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="atrakcijaID" class="control-label"></label>
                <select asp-for="atrakcijaID" class="form-control" asp-items="ViewBag.atrakcijaID"></select>
                <span asp-validation-for="atrakcijaID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="verifikovano" /> @Html.DisplayNameFor(model => model.verifikovano)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
