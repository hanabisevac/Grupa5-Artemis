@model IEnumerable<GoldenLilies.Models.Prijavljeni>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista prijavljenih</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.korisnik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tura.informacije)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.korisnik.ime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
